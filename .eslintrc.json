{
    "extends": ["next/core-web-vitals", "next/typescript"],
    "rules": {
        "indent": ["error", 4],
        "linebreak-style": ["error", "unix"],
        "eol-last": ["error", "never"],
        "no-trailing-spaces": ["off"],
        "max-len": ["error", {
            "code": 80,
            "ignoreComments": true,
            "ignoreUrls": true
        }],
        "space-before-function-paren": ["error", "always"],
        "quotes": ["error", "double"],
        "semi": ["error", "always"],
        "comma-dangle": ["error", "never"]
    }
}
